<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OceanProfessional" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorPrimaryVariant">@color/ocean_primary_dark</item>
        <item name="colorSecondary">@color/ocean_secondary</item>
        <item name="colorError">@color/ocean_error</item>
        <item name="android:navigationBarColor">@color/ocean_bg</item>
        <item name="android:statusBarColor">@color/ocean_primary_dark</item>
        <item name="android:windowBackground">@color/ocean_bg</item>
        <item name="android:textColorPrimary">@color/ocean_text</item>
        <item name="android:textColorSecondary">@color/ocean_text_secondary</item>
        <item name="materialButtonStyle">@style/Ocean.Button</item>
        <item name="floatingActionButtonStyle">@style/Ocean.Fab</item>
        <item name="toolbarStyle">@style/Ocean.Toolbar</item>
    </style>

    <style name="Ocean.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/ocean_surface</item>
        <item name="titleTextColor">@color/ocean_text</item>
        <item name="navigationIconTint">@color/ocean_text</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Ocean.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/ocean_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Ocean.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/ocean_primary</item>
        <item name="rippleColor">@color/ocean_secondary</item>
    </style>

    <style name="Ocean.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/ocean_surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/ocean_divider</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Ocean.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/ocean_surface</item>
        <item name="boxStrokeColor">@color/ocean_primary</item>
        <item name="hintTextColor">@color/ocean_text_secondary</item>
        <item name="android:textColor">@color/ocean_text</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Ocean.Rounded</item>
    </style>

    <style name="ShapeAppearance.Ocean.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>
</resources>
